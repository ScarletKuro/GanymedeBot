{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "0.1.0",
	"command": "gulp",
	"isShellCommand": true,
	"showOutput": "always",
	"args": ["--no-color"],
	"tasks": [
		{
			"taskName": "build",
			"args": ["--app"],
			"isBuildCommand": true,
			"isBackground": false,
			"problemMatcher": [
				"$tsc"
			]
		}
	]
}